{
    "root": true,
    "extends": "airbnb-base/legacy",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "jquery": true
    },
    "globals": {
        "dw": true,
        "customer": true,
        "session": true,
        "request": true,
        "response": true,
        "empty": true,
        "PIPELET_ERROR": true,
        "PIPELET_NEXT": true,
        "webreferences": true
    },
    "rules": {
        "import/no-unresolved": "off",
        "indent": ["error", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "func-names": "off",
        "require-jsdoc": "off",
        "valid-jsdoc": ["error", { "preferType": { "Boolean": "boolean", "Number": "number", "object": "Object", "String": "string" }, "requireReturn": false}],
        "vars-on-top": "off",
        "global-require": "off",
        "no-shadow": ["error", { "allow": ["err", "callback"]}],
        "max-len": "off",
        "new-cap": 0
    }
}